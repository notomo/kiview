
call themis#option('recursive', 1)

let s:root = getcwd()

function! KiviewTestBeforeEach() abort
    execute 'cd' s:root

    call kiview#logger#set_func({ msg -> themis#log(msg) })
    call themis#log('')
endfunction

function! KiviewTestAfterEach() abort
    silent! %bwipeout!
    call kiview#logger#clear()
endfunction
